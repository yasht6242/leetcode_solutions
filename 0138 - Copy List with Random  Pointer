/*
// Definition for a Node.
class Node {
public:
    int val;
    Node* next;
    Node* random;
    
    Node(int _val) {
        val = _val;
        next = NULL;
        random = NULL;
    }
};
*/

class Solution {
public:
    Node* copyRandomList(Node* head) {
        if(!head){
            return nullptr;
        }
        unordered_map<Node*, Node*> copiedNodes;
        Node* current = head;
        while(current){
            copiedNodes[current] = new Node(current->val);
            current = current->next;
        }
        current = head;
        while(current){
            copiedNodes[current]->next = copiedNodes[current->next];
            copiedNodes[current]->random = copiedNodes[current->random];
            current = current->next;
        }
        return copiedNodes[head];
    }
};
